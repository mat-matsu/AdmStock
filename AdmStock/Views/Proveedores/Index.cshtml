@model IEnumerable<AdmStock.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<h1>@ViewBag.Message</h1>

<p>
    <a asp-action="Create">
        <input type="button" value="Nuevo Proveedor" class="btn btn-info" />
    </a>
</p>

@using (Html.BeginForm())
{
    <ul id="searchForm">
        <li>
            <label class="form-label">Buscar por CUIL: </label>
            @Html.TextBox("searchStrCuil", null, new {@class="form-control"})
        </li>
        <li>
            <label class="form-label">Buscar por Nombre: </label>
            @Html.TextBox("searchStrNom", null, new {@class="form-control"})
        </li>
        <li>
            <label class="form-label">Buscar por Direccion: </label>
            @Html.TextBox("searchStrDir", null, new {@class="form-control"})
        </li>
        <li>
            <label class="form-label">Buscar por Telefono: </label>
            @Html.TextBox("searchStrTel", null, new {@class="form-control"})
        </li>
        <li><input type="submit" value="Buscar" class="btn btn-info" /> </li>
    </ul>
}

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.ActionLink("CUIL", "Index", new { sortOrder = @ViewBag.CuilSortParm}, null)
            </th>
            <th scope="col">
                @Html.ActionLink("Nombre", "Index", new { sortOrder = @ViewBag.NomSortParm}, null)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.prov_dir)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.prov_tel)
            </th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prov_cuil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prov_nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prov_dir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prov_tel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.prov_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.prov_id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.prov_id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
