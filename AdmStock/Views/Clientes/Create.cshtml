@model AdmStock.Models.Cliente

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cliente_nom" class="control-label"></label>
                <input asp-for="cliente_nom" class="form-control" />
                <span asp-validation-for="cliente_nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_dni" class="control-label"></label>
                <input asp-for="cliente_dni" class="form-control" />
                <span asp-validation-for="cliente_dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_dir" class="control-label"></label>
                <input asp-for="cliente_dir" class="form-control" />
                <span asp-validation-for="cliente_dir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_tel" class="control-label"></label>
                <input asp-for="cliente_tel" class="form-control" />
                <span asp-validation-for="cliente_tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
