@model AdmStock.Models.Venta

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="lote_id" class="control-label"></label>
                <select asp-for="lote_id" class ="form-control" asp-items="ViewBag.lote_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="cliente_id" class="control-label"></label>
                <select asp-for="cliente_id" class ="form-control" asp-items="ViewBag.cliente_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="venta_cant" class="control-label"></label>
                <input asp-for="venta_cant" class="form-control" />
                <span asp-validation-for="venta_cant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="venta_fecha" class="control-label"></label>
                <input asp-for="venta_fecha" class="form-control" />
                <span asp-validation-for="venta_fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
