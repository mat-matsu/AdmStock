@model IEnumerable<AdmStock.Models.Venta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.venta_cant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.venta_fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.venta_cant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venta_fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.cliente_dir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lote.lote_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.venta_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.venta_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.venta_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
