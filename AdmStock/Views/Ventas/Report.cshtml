@model IEnumerable<AdmStock.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<h1>@ViewBag.Message</h1>

<h4>Reportes</h4>

@using (Html.BeginForm("Report", "Ventas", FormMethod.Post, new { enctype = "multipart/form-data" }))  
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Fecha inicio: </label>
                    @Html.TextBox("startDate", null, new {@class="form-control", @type = "date"})
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha fin: </label>
                    @Html.TextBox("endDate", null, new {@class="form-control", @type = "date", @value="@DateTime.Now"})
                </div>
                <div class="form-group">
                    <input type="submit" value="Generar Reporte" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
