@model AdmStock.Models.Producto

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar este producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.prod_nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.prod_desc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prod_desc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Articulos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Articulos.tipo_prod)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="prod_id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
