@model IEnumerable<AdmStock.Models.Lote>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lote_cant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lote_precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lote_cant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lote_precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productos.prod_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedores.prov_cuil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.lote_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.lote_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.lote_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
